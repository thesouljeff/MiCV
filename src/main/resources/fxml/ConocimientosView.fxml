<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="view" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="640.0" prefWidth="480.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <TableView fx:id="tvConocimiento" editable="true" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <columns>
            <TableColumn fx:id="tcDenominacion" prefWidth="100.0" text="Denominación" />
            <TableColumn fx:id="tcNivel" prefWidth="100.0" text="Nivel" />
        </columns>
      </TableView>
   </center>
   <right>
      <VBox prefHeight="200.0" spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="btAnadirConocimiento" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onClickAnadirConocimiento" text="Añadir conocimiento" />
            <Button fx:id="btAnadirIdioma" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onClickAnadirIdioma" text="Añadir Idioma" />
            <Button fx:id="btEliminar" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onClickEliminar" text="Eliminar" />
         </children>
         <padding>
            <Insets left="5.0" />
         </padding>
      </VBox>
   </right>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</BorderPane>
